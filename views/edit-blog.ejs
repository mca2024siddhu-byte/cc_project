<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit - <%= blog.title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Lora:wght@400;500;600&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-display { font-family: 'Playfair Display', serif; }
        .font-serif { font-family: 'Lora', serif; }
        .font-inter { font-family: 'Inter', sans-serif; }
        body { font-family: 'Lora', serif; }
        
        /* Hide placeholder on focus */
        .title-input:focus::placeholder,
        .content-input:focus::placeholder {
            opacity: 0.3;
        }
        
        /* Plus Button Animation */
        .plus-btn {
            transition: all 0.3s ease;
        }
        
        .plus-btn:hover {
            transform: scale(1.1) rotate(90deg);
        }
        
        /* Selection */
        ::selection {
            background: #10b981;
            color: white;
        }
        
        /* Remove default outline */
        .title-input:focus,
        .content-input:focus {
            outline: none;
        }
        
        /* Smooth scroll */
        html {
            scroll-behavior: smooth;
        }

        /* Fade out animation */
        @keyframes fadeOut {
            from { opacity: 1; transform: scale(1); }
            to { opacity: 0; transform: scale(0.95); }
        }
        
        .fade-out {
            animation: fadeOut 0.3s ease-out forwards;
        }

        /* Top bar button hover */
        .nav-btn {
            transition: all 0.2s ease;
        }

        .nav-btn:hover {
            transform: translateY(-1px);
        }
    </style>
</head>
<body class="bg-white min-h-screen font-serif antialiased">
    <!-- Simple Top Bar -->
    <nav class="fixed top-0 left-0 right-0 bg-white border-b border-slate-200 z-50">
        <div class="max-w-4xl mx-auto px-6 py-4 flex justify-between items-center">
            <a href="/" class="text-xl font-display font-bold text-slate-900 hover:text-emerald-600 transition-colors">
                Élégance
            </a>
            
            <div class="flex items-center gap-3">
                <button 
                    type="button" 
                    id="updateBtn"
                    class="nav-btn bg-emerald-600 hover:bg-emerald-700 text-white px-5 py-2 rounded-full text-sm font-medium font-inter"
                >
                    Publish Changes
                </button>
                
                <!-- More Menu (3 dots) -->
                <div class="relative">
                    <button 
                        type="button"
                        id="moreBtn"
                        class="nav-btn w-9 h-9 flex items-center justify-center rounded-full hover:bg-slate-100 text-slate-600 transition-colors"
                        onclick="toggleMoreMenu()"
                    >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                        </svg>
                    </button>
                    
                    <!-- Dropdown Menu -->
                    <div id="moreMenu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-slate-200 py-1 z-50">
                        <a href="/blog/<%= blog._id %>" class="flex items-center gap-3 px-4 py-2.5 hover:bg-slate-50 text-slate-700 text-sm transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                            View Story
                        </a>
                        <a href="/profile" class="flex items-center gap-3 px-4 py-2.5 hover:bg-slate-50 text-slate-700 text-sm transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            My Profile
                        </a>
                        <div class="border-t border-slate-200 my-1"></div>
                        <button 
                            type="button"
                            onclick="openDeleteModal(); toggleMoreMenu();"
                            class="w-full flex items-center gap-3 px-4 py-2.5 hover:bg-red-50 text-red-600 text-sm transition-colors"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Delete Story
                        </button>
                    </div>
                </div>
                
                <a href="/profile" class="nav-btn w-9 h-9 flex items-center justify-center rounded-full hover:bg-slate-100 text-slate-600 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Editor -->
    <div class="max-w-3xl mx-auto px-6 pt-24 pb-20">
        <form method="POST" enctype="multipart/form-data" id="editForm">
            <!-- Title Input -->
            <input
                type="text"
                id="title"
                name="title"
                required
                value="<%= blog.title %>"
                class="title-input w-full text-5xl font-display font-bold text-slate-900 placeholder-slate-300 border-none mb-8"
                placeholder="Title"
                maxlength="100"
            >
            
            <!-- Cover Image Preview -->
            <div id="coverImagePreview" class="<%= blog.headerImage ? '' : 'hidden' %> mb-12">
                <div class="relative group">
                    <img id="coverImageElement" src="<%= blog.headerImage || '' %>" alt="Cover" class="w-full h-auto rounded-lg">
                    <button 
                        type="button" 
                        onclick="removeCoverImage()"
                        class="absolute top-4 right-4 w-10 h-10 bg-black/70 hover:bg-black text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Hidden file inputs -->
            <input type="file" id="headerImage" name="headerImage" accept="image/*" class="hidden" onchange="handleCoverImage(this)">
            <input type="file" id="video" name="video" accept="video/*" class="hidden" onchange="handleVideo(this)">
            
            <!-- Hidden checkbox for removing media -->
            <input type="checkbox" id="removeHeaderImage" name="removeHeaderImage" class="hidden">
            <input type="checkbox" id="removeVideo" name="removeVideo" class="hidden">

            <!-- Video Preview -->
            <div id="videoPreview" class="<%= blog.video ? '' : 'hidden' %> mb-12">
                <div class="relative group">
                    <!-- Existing Video (from database) -->
                    <% if (blog.video) { %>
                        <div id="existingVideoPreview" class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 border-2 border-purple-200">
                            <div class="flex items-center gap-4">
                                <div class="w-14 h-14 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center flex-shrink-0 shadow-lg">
                                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                </div>
                                <div class="flex-1">
                                    <p class="font-semibold text-slate-900 mb-1">Current Video</p>
                                    <p class="text-sm text-purple-700">Video is attached to this story</p>
                                </div>
                                <button 
                                    type="button" 
                                    onclick="removeExistingVideo()"
                                    class="w-10 h-10 bg-red-500 hover:bg-red-600 rounded-full flex items-center justify-center text-white transition-all shadow-lg hover:shadow-xl"
                                    title="Remove video"
                                >
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- New Video Preview (when user uploads new one) -->
                    <div id="newVideoPreview" class="hidden bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 border-2 border-purple-200">
                        <div class="flex items-center gap-4">
                            <div class="w-14 h-14 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center flex-shrink-0 shadow-lg">
                                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                </svg>
                            </div>
                            <div class="flex-1">
                                <p class="font-semibold text-slate-900" id="videoFileName">New Video</p>
                                <p class="text-sm text-purple-700" id="videoFileSize"></p>
                            </div>
                            <button 
                                type="button" 
                                onclick="removeNewVideo()"
                                class="w-10 h-10 bg-red-500 hover:bg-red-600 rounded-full flex items-center justify-center text-white transition-all shadow-lg hover:shadow-xl"
                            >
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Content Textarea -->
            <textarea
                id="content"
                name="content"
                required
                rows="20"
                class="content-input w-full text-xl text-slate-800 placeholder-slate-300 border-none resize-none leading-relaxed"
                placeholder="Tell your story..."
                oninput="autoResize(this)"
            ><%= blog.content %></textarea>
        </form>
    </div>

    <!-- Floating Plus Button -->
    <button 
        type="button"
        id="plusBtn"
        class="plus-btn fixed left-6 top-1/2 -translate-y-1/2 w-12 h-12 bg-white border-2 border-slate-300 text-slate-600 rounded-full flex items-center justify-center hover:border-emerald-500 hover:text-emerald-600 shadow-lg"
        onclick="toggleMediaMenu()"
    >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
    </button>

    <!-- Media Menu -->
    <div id="mediaMenu" class="fixed left-20 top-1/2 -translate-y-1/2 bg-white rounded-xl shadow-2xl border border-slate-200 hidden">
        <div class="p-2 space-y-1">
            <button 
                type="button"
                onclick="document.getElementById('headerImage').click(); toggleMediaMenu();"
                class="w-full flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-slate-50 transition-colors text-left group"
            >
                <div class="w-10 h-10 bg-blue-100 group-hover:bg-blue-200 rounded-lg flex items-center justify-center transition-colors">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <div>
                    <div class="font-medium text-slate-900 text-sm">
                        <%= blog.headerImage ? 'Change' : 'Add' %> Image
                    </div>
                    <div class="text-xs text-slate-500">Cover photo</div>
                </div>
            </button>
            
            <button 
                type="button"
                onclick="document.getElementById('video').click(); toggleMediaMenu();"
                class="w-full flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-slate-50 transition-colors text-left group"
            >
                <div class="w-10 h-10 bg-purple-100 group-hover:bg-purple-200 rounded-lg flex items-center justify-center transition-colors">
                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                </div>
                <div>
                    <div class="font-medium text-slate-900 text-sm">
                        <%= blog.video ? 'Change' : 'Add' %> Video
                    </div>
                    <div class="text-xs text-slate-500">Embed video</div>
                </div>
            </button>
        </div>
    </div>

    <!-- Bottom Stats Bar -->
    <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-slate-200 py-3 px-6">
        <div class="max-w-4xl mx-auto flex items-center justify-between text-sm text-slate-500">
            <div class="flex items-center gap-6">
                <span><span id="wordCount">0</span> words</span>
                <span><span id="charCount">0</span> characters</span>
                <span><span id="readTime">0</span> min read</span>
            </div>
            <div class="flex items-center gap-2 text-emerald-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-xs">Changes saved</span>
            </div>
        </div>
    </div>

    <!-- Success/Error Alerts -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="fixed top-20 right-6 bg-red-50 border-l-4 border-red-500 text-red-800 px-6 py-4 rounded-r-lg shadow-lg max-w-md z-50">
            <div class="flex items-center gap-3">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="text-sm font-medium"><%= error %></p>
            </div>
        </div>
    <% } %>

    <% if (typeof success !== 'undefined' && success) { %>
        <div class="fixed top-20 right-6 bg-emerald-50 border-l-4 border-emerald-500 text-emerald-800 px-6 py-4 rounded-r-lg shadow-lg max-w-md z-50">
            <div class="flex items-center gap-3">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <p class="text-sm font-medium"><%= success %></p>
            </div>
        </div>
    <% } %>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center hidden z-50 px-4">
        <div class="bg-white rounded-2xl p-6 max-w-sm w-full shadow-2xl">
            <div class="text-center mb-4">
                <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-3">
                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-display font-bold text-slate-900 mb-2">Delete Story?</h3>
                <p class="text-slate-600 text-sm mb-4">
                    This will permanently delete "<%= blog.title %>" and all its comments and likes. This action cannot be undone.
                </p>
            </div>
            <div class="flex gap-3">
                <button onclick="closeDeleteModal()" class="flex-1 bg-slate-100 text-slate-700 px-4 py-2.5 rounded-xl hover:bg-slate-200 font-semibold text-sm transition-all">
                    Cancel
                </button>
                <button id="confirmDelete" class="flex-1 bg-gradient-to-r from-red-500 to-red-600 text-white px-4 py-2.5 rounded-xl hover:from-red-600 hover:to-red-700 font-semibold text-sm shadow-lg shadow-red-500/30 transition-all">
                    Delete Forever
                </button>
            </div>
        </div>
    </div>

    <script>
        // Auto-resize textarea
        function autoResize(textarea) {
            textarea.style.height = 'auto';
            textarea.style.height = textarea.scrollHeight + 'px';
            updateStats();
        }

        // Update word count, char count, reading time
        function updateStats() {
            const content = document.getElementById('content').value;
            const words = content.trim().split(/\s+/).filter(word => word.length > 0).length;
            const chars = content.length;
            const readTime = Math.ceil(words / 200) || 0;

            document.getElementById('wordCount').textContent = words;
            document.getElementById('charCount').textContent = chars;
            document.getElementById('readTime').textContent = readTime;
        }

        // Toggle media menu
        function toggleMediaMenu() {
            const menu = document.getElementById('mediaMenu');
            menu.classList.toggle('hidden');
        }

        // Toggle more menu
        function toggleMoreMenu() {
            const menu = document.getElementById('moreMenu');
            menu.classList.toggle('hidden');
        }

        // Close menus when clicking outside
        document.addEventListener('click', function(e) {
            const mediaMenu = document.getElementById('mediaMenu');
            const plusBtn = document.getElementById('plusBtn');
            const moreMenu = document.getElementById('moreMenu');
            const moreBtn = document.getElementById('moreBtn');
            
            if (!mediaMenu.contains(e.target) && !plusBtn.contains(e.target)) {
                mediaMenu.classList.add('hidden');
            }
            
            if (!moreMenu.contains(e.target) && !moreBtn.contains(e.target)) {
                moreMenu.classList.add('hidden');
            }
        });

        // Handle cover image upload
        function handleCoverImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('coverImageElement').src = e.target.result;
                    document.getElementById('coverImagePreview').classList.remove('hidden');
                    document.getElementById('removeHeaderImage').checked = false;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Remove cover image
        function removeCoverImage() {
            const preview = document.getElementById('coverImagePreview');
            preview.classList.add('fade-out');
            setTimeout(() => {
                preview.classList.add('hidden');
                preview.classList.remove('fade-out');
                document.getElementById('headerImage').value = '';
                document.getElementById('removeHeaderImage').checked = true;
            }, 300);
        }

        // Handle video upload (new video)
        function handleVideo(input) {
            if (input.files && input.files[0]) {
                const file = input.files[0];
                const fileSize = (file.size / 1024 / 1024).toFixed(2);
                
                const existingPreview = document.getElementById('existingVideoPreview');
                if (existingPreview) {
                    existingPreview.classList.add('hidden');
                }
                
                document.getElementById('videoFileName').textContent = file.name;
                document.getElementById('videoFileSize').textContent = fileSize + ' MB';
                document.getElementById('newVideoPreview').classList.remove('hidden');
                document.getElementById('videoPreview').classList.remove('hidden');
                
                document.getElementById('removeVideo').checked = false;
            }
        }

        // Remove existing video (from database)
        function removeExistingVideo() {
            const existingPreview = document.getElementById('existingVideoPreview');
            const videoPreview = document.getElementById('videoPreview');
            
            existingPreview.classList.add('fade-out');
            setTimeout(() => {
                existingPreview.remove();
                videoPreview.classList.add('hidden');
                document.getElementById('removeVideo').checked = true;
            }, 300);
        }

        // Remove new video (just uploaded)
        function removeNewVideo() {
            const newPreview = document.getElementById('newVideoPreview');
            const videoPreview = document.getElementById('videoPreview');
            
            newPreview.classList.add('fade-out');
            setTimeout(() => {
                newPreview.classList.add('hidden');
                newPreview.classList.remove('fade-out');
                videoPreview.classList.add('hidden');
                document.getElementById('video').value = '';
                
                const existingPreview = document.getElementById('existingVideoPreview');
                if (existingPreview) {
                    existingPreview.classList.remove('hidden');
                    videoPreview.classList.remove('hidden');
                }
            }, 300);
        }

        // Update button
        document.getElementById('updateBtn').addEventListener('click', function() {
            const title = document.getElementById('title').value.trim();
            const content = document.getElementById('content').value.trim();

            if (!title) {
                alert('Please add a title to your story');
                document.getElementById('title').focus();
                return;
            }

            if (!content) {
                alert('Please write your story');
                document.getElementById('content').focus();
                return;
            }

            document.getElementById('editForm').submit();
        });

        // Delete modal functions
        function openDeleteModal() {
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }

        // Confirm delete
        document.getElementById('confirmDelete').addEventListener('click', async function() {
            const button = this;
            const originalHTML = button.innerHTML;
            button.innerHTML = '<svg class="animate-spin w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>';
            button.disabled = true;
            
            try {
                const response = await fetch(`/blog/<%= blog._id %>/delete`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    window.location.href = '/profile';
                } else {
                    alert('Failed to delete: ' + (result.error || 'Unknown error'));
                    button.innerHTML = originalHTML;
                    button.disabled = false;
                    closeDeleteModal();
                }
            } catch (error) {
                alert('An error occurred');
                button.innerHTML = originalHTML;
                button.disabled = false;
                closeDeleteModal();
            }
        });

        // Close modal when clicking outside
        document.getElementById('deleteModal').addEventListener('click', function(e) {
            if (e.target === this) closeDeleteModal();
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
                document.getElementById('updateBtn').click();
            }
            if (e.key === 'Escape') {
                closeDeleteModal();
            }
        });

        // Auto-save (simulation)
        let saveTimeout;
        ['title', 'content'].forEach(id => {
            document.getElementById(id).addEventListener('input', () => {
                clearTimeout(saveTimeout);
                saveTimeout = setTimeout(() => {
                    console.log('Changes saved');
                }, 1000);
            });
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateStats();
            autoResize(document.getElementById('content'));
            
            const titleInput = document.getElementById('title');
            titleInput.focus();
            titleInput.setSelectionRange(titleInput.value.length, titleInput.value.length);
        });
    </script>
</body>
