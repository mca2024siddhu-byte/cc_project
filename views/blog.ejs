                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
                        </a>
                    </div>
                </div>
            </div>
            <div class="border-t border-slate-700 pt-8 text-center text-slate-400 text-sm">
                <p>© 2024 <span class="font-display font-bold text-white">Élégance</span>. Crafted with passion and precision.</p>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Reading Progress Bar
        window.addEventListener('scroll', () => {
            const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (winScroll / height) * 100;
            document.getElementById('progressBar').style.width = scrolled + '%';
        });

        // Back to Top Button
        const backToTopButton = document.getElementById('backToTop');
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTopButton.classList.add('visible');
            } else {
                backToTopButton.classList.remove('visible');
            }
        });

        backToTopButton.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Like Button Functionality
        <% if (user) { %>
        document.getElementById('likeButton').addEventListener('click', async function() {
            const button = this;
            const blogId = '<%= blog._id %>';
            
            // Add heart beat animation
            button.classList.add('heart-beat');
            setTimeout(() => button.classList.remove('heart-beat'), 500);
            
            try {
                const response = await fetch(`/blog/${blogId}/like`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    // Update both counters
                    document.getElementById('likeCount').textContent = result.likes;
                    document.getElementById('sidebarLikeCount').textContent = result.likes;
                    
                    const heartIcon = `<svg class="w-5 h-5" fill="${result.hasLiked ? 'currentColor' : 'none'}" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>`;
                    
                    if (result.hasLiked) {
                        button.innerHTML = heartIcon + ' Liked';
                        button.className = 'btn-elegant px-6 py-3 rounded-full text-sm font-semibold flex items-center gap-2 shadow-lg relative z-10 bg-gradient-to-r from-rose-500 to-pink-500 text-white';
                    } else {
                        button.innerHTML = heartIcon + ' Like this story';
                        button.className = 'btn-elegant px-6 py-3 rounded-full text-sm font-semibold flex items-center gap-2 shadow-lg relative z-10 bg-white text-slate-700 border border-slate-300';
                    }
                }
            } catch (error) {
                console.error('Error:', error);
            }
        });
        <% } %>

        // Share buttons
        document.querySelectorAll('.share-btn').forEach((btn, index) => {
            btn.addEventListener('click', () => {
                if (index === 2) { // Copy link button
                    navigator.clipboard.writeText(window.location.href);
                    const originalHTML = btn.innerHTML;
                    btn.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>';
                    setTimeout(() => btn.innerHTML = originalHTML, 2000);
                }
            });
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
</body>
</html>